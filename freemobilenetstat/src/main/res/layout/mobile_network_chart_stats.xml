<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <!-- Left (Orange) -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_orange"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_network_color1" />

            <TextView
                android:id="@+id/on_orange_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_network_color1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_orange_2G"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_2G_network_color1" />

            <TextView
                android:id="@+id/on_orange_2G_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_2G_network_color1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_orange_3G"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_3G_network_color1" />

            <TextView
                android:id="@+id/on_orange_3G_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/orange_3G_network_color1" />
        </TableRow>
    </TableLayout>

    <!-- Right (Free) -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_free_mobile"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_network_color1" />

            <TextView
                android:id="@+id/on_free_mobile_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_network_color1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_free_mobile_3G"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_3G_network_color1" />

            <TextView
                android:id="@+id/on_free_mobile_3G_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_3G_network_color1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_free_mobile_femtocell"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_3G_femtocell_network_color1" />

            <TextView
                android:id="@+id/on_free_mobile_femtocell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_3G_femtocell_network_color1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/network_free_mobile_4G"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_4G_network_color1" />

            <TextView
                android:id="@+id/on_free_mobile_4G_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:text="100%"
                android:textSize="@dimen/detailed_stats_text_size"
                android:textColor="@color/free_mobile_4G_network_color1" />
        </TableRow>

    </TableLayout>

</LinearLayout>